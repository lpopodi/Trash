
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Event</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label  col-md-2">Enter Zip Code</label>
            <div class="col-md-10">
                <input type="text" name="ZipInput" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label  col-md-2">Enter Date</label>
            <div class="col-md-10">
                <input type="date" name="DateInput" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("GetStops", "DisplayStops", "Employee", null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    </div>
}

<div>
    @if (Model != null && Model.Any())
    {
        Html.RenderPartial("DisplayStops");
    }
    else
    {
        Html.DisplayText("No results found");
        //Message to display no student record found.
    }

</div> 